  "code": "using System;\r\nusing System.Drawing;\r\n\r\n// The 'windowHandle' parameter will contain the window handle for the:\r\n//   - Active window when run by hotkey\r\n//   - Trigger target when run by a Trigger rule\r\n//   - TitleBar Button owner when run by a TitleBar Button\r\n//   - Jump List owner when run from a Taskbar Jump List\r\n//   - Currently focused window if none of these match\r\npublic static class DisplayFusionFunction {\r\n\tpublic static void Run(IntPtr windowHandle)\t{\r\n\t\r\n        //collects the value set by the Toggle Focus script\r\n        uint activeMonitor = (uint) BFS.ScriptSettings.ReadValueInt(\"liveMonitor\");\r\n        \r\n        // Gets the main window\r\n        IntPtr lofiWindow = BFS.Window.GetWindowByText(\"*lofi hip hop radio - beats to relax/study to - YouTube*\");\r\n        uint previousMonitor = BFS.Monitor.GetMonitorIDByWindow(lofiWindow);\r\n        Rectangle previousWindowBounds = new Rectangle();\r\n\t\tpreviousWindowBounds = BFS.Window.GetBounds(lofiWindow);\r\n        \r\n        // Set the window width percentage here\r\n        double lofiWidthPercent = 0.65;\r\n       \r\n        // Get the monitor bounds\r\n        Rectangle monitorBounds = BFS.Monitor.GetMonitorBoundsByID(activeMonitor);\r\n        \r\n        // Set the target window width to the screen width * the windowWidthPercent\r\n        int lofiWindowBoundsWidth = Convert.ToInt32(monitorBounds.Width * lofiWidthPercent);\r\n        \r\n        // Set the target window height to 100% of the screen height\r\n        int lofiWindowBoundsHeight = monitorBounds.Height;\r\n        \r\n        // Set the target Y value to the top of the monitor\r\n        int lofiWindowBoundsY = monitorBounds.Y;\r\n        \r\n        // Set the target X value\r\n        int lofiWindowBoundsX = monitorBounds.X;\r\n        \r\n        // Create the target window bounds\r\n        Rectangle lofiWindowBounds = new Rectangle(lofiWindowBoundsX, lofiWindowBoundsY, lofiWindowBoundsWidth, lofiWindowBoundsHeight);\r\n        \r\n        // Resize and move the window\r\n        if (previousMonitor != activeMonitor || previousWindowBounds != lofiWindowBounds) {\r\n            BFS.Window.SetSizeAndLocation(lofiWindow, lofiWindowBounds.X,  lofiWindowBounds.Y, lofiWindowBounds.Width, lofiWindowBounds.Height);\r\n            BFS.ScriptSettings.DeleteValue(\"noChanges\");\r\n            BFS.ScriptSettings.WriteValueBool(\"noChanges\", false);\r\n        }\r\n\t}\r\n}",
